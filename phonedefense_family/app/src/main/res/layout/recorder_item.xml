<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.15">
        <TextView
            android:id="@+id/callnumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="7dp"
            android:paddingLeft="8dp"
            android:textColor="#1D1D1C"
            android:textSize="20sp"
            android:layout_weight="0.2"/>

        <LinearLayout
            android:id="@+id/recorder_item_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/callTypestr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingBottom="10dp"
                android:textSize="12sp"
                android:textColor="#FF0000"
                android:layout_weight="0.37"/>
            <TextView
                android:id="@+id/calltime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                android:paddingRight="5dp"
                android:textSize="12sp"
                android:textColor="#FF0000"
                android:layout_weight="0.2"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="0.55"/>
        <Button
            android:id="@+id/recorder_item_playBtn"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_weight="0.5"
            android:background="@mipmap/play"
            android:layout_gravity="center"
            android:focusable="false"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.45"
            android:background="@mipmap/string"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/recorder_item_complainBtn"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.5"
            style="?android:attr/borderlessButtonStyle"
            android:background="@mipmap/complain"
            android:layout_gravity="center"
            android:focusable="false"/>


    </LinearLayout>

</LinearLayout>